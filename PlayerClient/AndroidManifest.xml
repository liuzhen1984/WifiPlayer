<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.silveroak.playerclient"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="20"/>
    <application
        android:name=".ui.BootApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light">
        <activity
            android:name="com.silveroak.playerclient.ui.activity.PlayerSearchDeviceActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.PlayerDeviceMusicListActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".ui.activity.PlayerDeviceMusicPlayActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name="com.silveroak.playerclient.ui.activity.PlayerConfigureActivity"
            android:label="@string/config_devcie"
            android:launchMode="singleInstance">
        </activity>
    </application>

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>
</manifest>
